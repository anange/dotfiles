syntax enable
set tabstop=4
set shiftwidth=4
set expandtab

set autoindent
set smartindent

set hidden
set showcmd

set nocompatible

colorscheme ron

" force good habits
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

"set cursorline
set wildmenu
set showmatch
